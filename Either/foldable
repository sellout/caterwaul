let Either = ./Type

in    λ(a : Type)
    →   { fold =
              λ(b : Type)
            → λ(c : Type)
            → λ(f : c → b → c)
            → λ(z : c)
            → λ(either : Either { _1 = a, _2 = b })
            → merge { Left = λ(_ : a) → z, Right = f z } either
        }
      : ./../Foldable/Type (λ(b : Type) → Either { _1 = a, _2 = b })
