{- A monad on a category C{object, arrow} is a monoid object in the category of
   endofunctors in C induced by composition.
-}
let kArrow = ./../Function/Kind

let kProduct = ./../Tuple/Kind

let vObject = Type

let v =
      ./../Category/Monoidal/extractCategory
      kArrow
      kProduct
      Type
      vObject
      ./../Category/Set/monoidal/cartesian

in    λ(object : Kind)
    → λ(cat : ./../Category/Kind kArrow kProduct vObject object)
    → ./../Monoid/Type
      (kArrow object object)
      (./../Category/Endofunctor/monoidal/monadic object v cat)
