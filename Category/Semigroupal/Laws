let kArrow = ./../../Function/Kind

let kProduct = ./../../Tuple/Kind

let vObject = Type

in    λ(object : Kind)
    → λ(cat : ./Kind kArrow kProduct vObject object)
    → let Isomorphism = ./../../Isomorphism/Type object cat.arrow
      
      in  { associativity :
                ∀(a : object)
              → ∀(b : object)
              → ∀(c : object)
              → Isomorphism
                { _1 =
                    cat.op { _1 = cat.op { _1 = a, _2 = b }, _2 = c }
                , _2 =
                    cat.op { _1 = a, _2 = cat.op { _1 = b, _2 = c } }
                }
          }
