                            cObject
                            { _1 = d.unit, _2 = x }
                    , product =
                        Î»(f : { _1 : object, _2 : object }) â†’
                        Î»(x : cObject) â†’
                          d.product { _1 = f._1 x, _2 = f._2 x }
