let kArrow = ./../Function/Kind

let kProduct = ./../Tuple/Kind

let vObject = Type

let v =
      ./../Category/Monoidal/extractCategory
      kArrow
      kProduct
      Type
      vObject
      ./../Category/Set/monoidal/cartesian

let Category = ./../Category/Kind kArrow kProduct vObject

in    λ(cObject : Kind)
    → λ(c : Category cObject)
    → λ(dObject : Kind)
    → λ(d : Category dObject)
    → λ(f : kArrow dObject cObject)
    → λ(fFunctor : ./../Functor/Type vObject dObject cObject v d c f)
    → λ(g : kArrow cObject dObject)
    → λ(adjunction : ./../Adjunction/Type cObject dObject c d f g)
    →   { identity =
            adjunction.counit
        , op =
              λ(a : cObject)
            → fFunctor.map (g a) (g (f (g a))) (adjunction.unit (g a))
        }
      : ./../Comonad/Type
        cObject
        c
        (./Type cObject dObject cObject { _1 = f, _2 = g })
