in    λ(object : Kind)
    → λ(cat : ./../../Category/Monoidal/Kind kArrow kProduct vObject object)
    → λ(m : object)
    → { additive :
          ./../../Semigroup/Type
          object
          ( ./../../Category/Monoidal/extractSemigroupal
            kArrow
            kProduct
            vObject
            object
            cat
          )
          m
      , multiplicative :
          ./../../Monoid/Type object cat m
      }
